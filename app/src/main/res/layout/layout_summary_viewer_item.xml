<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/summary_data_item_margin_start"
    android:id="@+id/ll_summary_container">

    <TextView
        android:id="@+id/viewer_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/shop_text_size"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/viewer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/name_text_size"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/viewer_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/date_text_size"/>


    <TableLayout
        android:id="@+id/summary_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </TableLayout>

</LinearLayout>