<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="storemanager.com.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/espresso_machine"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="storemanager.com.app.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--<activity android:name=".activity.MainActivity"
            android:label="Main"/>-->

        <activity
            android:name="storemanager.com.app.activity.GoogleSignInActivity"
            android:label="@string/label_google_sign_in" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity
            android:name="storemanager.com.app.activity.FacebookActivity"
            android:label="@string/label_facebook_login"/>

        <activity
            android:name=".activity.SummaryComposerActivity"
            android:label="@string/label_send_data"/>


        <activity
            android:name=".activity.AddItemsActivity"
            android:label="@string/label_add_item"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            />

        <activity
            android:name=".activity.AddShopActivity"
            android:label="@string/label_add_shop"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity
            android:name=".activity.SummaryViewerActivity"
            android:label="@string/label_view_data"/>

        <activity
            android:name=".activity.FilterPreferenceActivity"
            android:label="@string/label_filter_pref"/>

        <activity
            android:name=".activity.ShopActivity"
            android:label="@string/label_shop"
            android:parentActivityName=".activity.MainActivity"/>

        <activity
            android:name=".activity.AddMenuItemActivity"
            android:label="@string/label_add_menu_item"
            android:parentActivityName=".activity.MainActivity"/>

        <activity
            android:name=".activity.AddBaseIngredientActivity"
            android:label="@string/label_add_base_ingredient_item"
            android:parentActivityName=".activity.AddMenuItemActivity"/>
    </application>


</manifest>