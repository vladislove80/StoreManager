<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="storemanager.com.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/espresso_machine"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="storemanager.com.app.activity.GoogleSignInActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Main"/>

        <!--<activity
            android:name="storemanager.com.app.activity.GoogleSignInActivity"
            android:label="@string/label_google_sign_in" />-->

        <meta-data
            android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity
            android:name=".activity.SummaryComposerActivity"
            android:label="@string/label_send_data"/>


        <activity
            android:name=".activity.AddISummaryItemsActivity"
            android:label="@string/label_add_item"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            />

        <activity
            android:name=".activity.AddShopActivity"
            android:label="@string/manifest_label_add_shop"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>

        <activity
            android:name=".activity.SummaryViewerActivity"
            android:label="@string/manifest_label_view_data"/>

        <activity
            android:name=".activity.FilterPreferenceActivity"
            android:label="@string/manifest_label_filter_pref"/>

        <activity
            android:name=".activity.ShopDataActivity"
            android:label="@string/manifest_label_shop"
            android:parentActivityName=".activity.MainActivity"/>

        <activity
            android:name=".activity.AddMenuItemActivity"
            android:label="@string/manifest_label_add_menu_item"
            android:parentActivityName=".activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity
            android:name=".activity.AddBaseListsActivity"
            android:label="@string/manifest_label_add_base_ingredient_item"
            android:parentActivityName=".activity.AddMenuItemActivity"/>

        <activity
            android:name=".activity.PopActivity"
            android:theme="@style/AppTheme.PopWindow"/>

        <activity
            android:name=".activity.ListOfListActivity"
            android:label="@string/manifest_label_lists"/>
    </application>


</manifest>